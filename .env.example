# Fullon Strategies Environment Configuration
# Copy this file to .env and fill in your actual values

# ========================================
# Logging Configuration (fullon_log)
# ========================================
LOG_LEVEL=WARNING
LOG_FORMAT=beautiful
LOG_CONSOLE=true
LOG_COLORS=true

# Test-specific logging (more verbose in tests)
LOG_TEST_LEVEL=DEBUG

# ========================================
# Database Configuration (fullon_orm)
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=fullon
DB_PASSWORD=your_password_here
DB_NAME=fullon2
DB_OHLCV_NAME=fullon2
DB_TEST_NAME=fullon2_test

# ========================================
# Connection Pool Settings
# ========================================
DB_POOL_SIZE=10
DB_POOL_MAX_OVERFLOW=20
DB_POOL_PRE_PING=true
DB_POOL_RECYCLE=1800
DB_POOL_TIMEOUT=60
DB_SHARED_POOL_SIZE=40
DB_SHARED_POOL_MAX_OVERFLOW=60

# ========================================
# Cache Configuration (Redis)
# ========================================
CACHE_HOST=localhost
CACHE_PORT=6379
CACHE_DB=0
CACHE_PASSWORD=your_cache_password_here
CACHE_TIMEOUT=30
CACHE_LOG=15
CACHE_ENABLED=true
CACHE_TTL_MULTIPLIER=1.0
CACHE_KEY_PREFIX=fullon_caches

# Test-specific cache database (separate from production)
CACHE_TEST_DB=15

# ========================================
# Performance Configuration
# ========================================
UVLOOP_ENABLED=true

# ========================================
# Exchange Configuration
# ========================================
CCXT_TIMEOUT=2
ADMIN_MAIL=admin@fullon

# ========================================
# Google Cloud Secrets Manager
# ========================================
GOOGLE_SECRET=your-gcp-secret-name
GOOGLE_CREDENTIALS=/path/to/service-account-key.json