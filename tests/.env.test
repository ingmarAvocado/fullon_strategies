# CI/CD Test Environment Configuration
# This file is used in CI/CD pipelines where secrets are injected

# ========================================
# Logging Configuration (fullon_log)
# ========================================
LOG_LEVEL=DEBUG
LOG_FORMAT=beautiful
LOG_CONSOLE=true
LOG_COLORS=false

# Test-specific logging
LOG_TEST_LEVEL=DEBUG

# ========================================
# Database Configuration (fullon_orm)
# ========================================
# These will be replaced by CI/CD secrets
DB_HOST=${CI_DB_HOST:-localhost}
DB_PORT=${CI_DB_PORT:-5432}
DB_USER=${CI_DB_USER:-postgres}
DB_PASSWORD=${CI_DB_PASSWORD:-}
DB_NAME=${CI_DB_NAME:-fullon2_ci}
DB_OHLCV_NAME=${CI_DB_OHLCV_NAME:-fullon2_ci}
DB_TEST_NAME=${CI_DB_TEST_NAME:-fullon2_test_ci}

# ========================================
# Connection Pool Settings
# ========================================
DB_POOL_SIZE=5
DB_POOL_MAX_OVERFLOW=10
DB_POOL_PRE_PING=true
DB_POOL_RECYCLE=1800
DB_POOL_TIMEOUT=30
DB_SHARED_POOL_SIZE=20
DB_SHARED_POOL_MAX_OVERFLOW=30

# ========================================
# Cache Configuration (Redis)
# ========================================
CACHE_HOST=${CI_CACHE_HOST:-localhost}
CACHE_PORT=${CI_CACHE_PORT:-6379}
CACHE_DB=0
CACHE_PASSWORD=${CI_CACHE_PASSWORD:-}
CACHE_TIMEOUT=30
CACHE_LOG=14
CACHE_ENABLED=true
CACHE_TTL_MULTIPLIER=1.0
CACHE_KEY_PREFIX=fullon_caches_ci

# Test-specific cache database
CACHE_TEST_DB=15

# ========================================
# Performance Configuration
# ========================================
UVLOOP_ENABLED=false

# ========================================
# Exchange Configuration
# ========================================
CCXT_TIMEOUT=5
ADMIN_MAIL=ci@fullon.test

# ========================================
# Google Cloud Secrets Manager
# ========================================
# CI/CD should inject these if needed
GOOGLE_SECRET=${CI_GOOGLE_SECRET:-}
GOOGLE_CREDENTIALS=${CI_GOOGLE_CREDENTIALS:-}